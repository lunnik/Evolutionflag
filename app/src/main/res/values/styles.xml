<resources>

    <!-- Base application theme. -->
    <style name="ActivityStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/window_color_var</item>
        <item name="android:textColorPrimary">@color/text_color_var</item>
        <item name="android:actionMenuTextColor">@color/menu_color</item>

        <!--Colores-->
        <item name="colorPrimary">@color/primary_var</item>
        <item name="colorPrimaryDark">@color/primary_dark_var</item>
        <item name="colorAccent">@color/accent_var</item>
    </style>


